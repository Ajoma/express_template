extends layout

block content
  h2 #{user} posts  

  if blogPosts
    each post in blogPosts
      .card
        .card-body
          a(href="/post/" + post.posturl).card-title #{post.posttitle}
          p.card-text= post.postbody
          a(href='/post/auth/' + post.user.username)= post.user.username

  else if blogContacts
      each contact in blogContacts
        .card
          .card-body
            a(href="/contact/" + contact.comment).card-title #{contact.fname}
            p.card-text= contact.email
            a(href='/contact/auth/' + contact.user.username)= contact.user.username
       
